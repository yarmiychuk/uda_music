<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_permission_message"
            style="@style/MenuTextView"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/standard_padding"
            android:text="@string/permission_message"
            android:textSize="@dimen/message_text_size"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/menu_margin"
            android:orientation="vertical"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_tracks"
                style="@style/MenuTextView"
                android:text="@string/label_tracks" />

            <TextView
                android:id="@+id/tv_artists"
                style="@style/MenuTextView"
                android:text="@string/label_artists" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/album_cover_description"
        android:src="@drawable/cd_image" />

</LinearLayout>
